<%= simple_form_for note do |f| %>
  <%= f.error_notification %>

  <%= f.input :completed, as: :boolean, label: 'Completed?' %>
  <%= f.input :title, label: false %>
  <%= f.input :body, as: :text, input_html: { rows: 7 }, label: false %>
  <%= link_to "Home", root_path, class: 'btn btn-outline-primary' %>
  <%= f.button :submit, 'Update', class: 'btn btn-outline-success' %>
  <%= link_to "Destroy", @note, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger' %>
<% end %>
