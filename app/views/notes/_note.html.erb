<div class="row justify-content-center">
  <% @notes.each do |note| %>
    <div class="col-md-3 border rounded shd m-2">
      <div class="border-bottom"><%= link_to note.title, note_path(note) %></div>
      <p><%= note.body %></p>
      <p class="text-right text-muted mb-0 border-top">
        <sub>
          <%= l note.created_at, format: :short %>
        </sub>
      </p>
    </div>
  <% end %>
</div>
